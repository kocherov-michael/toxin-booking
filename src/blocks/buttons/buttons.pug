mixin button-link-primary(options)
  -
    const text = options.text ? options.text : "button"
    const sizeClass = options.small ? "button-primary_size_small" : ""
    const link = options.link?options.link:"404.hmtl"
  
  a.button.button-primary(class=sizeClass href=link)&attributes(attributes) #{text}

mixin button-form-primary(options)
  -
    const text = options.text ? options.text : "button"
    const sizeClass = options.small ? "button-primary_size_small" : ""
    const buttonName = options.name ? options.name : "name"
    const buttonType = options.type ? options.type : "button"
  
  button.button.button-primary(class=sizeClass type=buttonType name=buttonName)&attributes(attributes) #{text}

