mixin rangeslider(header, min, max)
  .range-slider(data-range-slider)&attributes(attributes)
    .range-slider__header-wrapper
      .range-slider__header #{header}
      .range-slider__range #{min}<span class="rub">ла</span>&nbsp; - #{max}<span class="rub">ла</span>
    input(type="range" multiple min="2000" step="1" max="13000" data-range-slider-input data-values-min="5000" data-values-max="10000")