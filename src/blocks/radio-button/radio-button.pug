mixin radiobutton(text, value, group, checked)
  if checked
    label.radio-button&attributes(attributes) 
      input.radio-button__input(type="radio" name=group value=value checked)
      .radio-button__check-outer
        .radio-button__check-inner
      .radio-button__text #{text}
  else
    label.radio-button&attributes(attributes)
      input.radio-button__input(type="radio" name=group value=value)
      .radio-button__check-outer
        .radio-button__check-inner
      .radio-button__text #{text}