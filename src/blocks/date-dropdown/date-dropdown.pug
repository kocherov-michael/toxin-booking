mixin dateDropdown(placeholder, text)
  label.date-dropdown&attributes(attributes)
    input.date-dropdown__text(type='text' placeholder= placeholder value=text)
    .date-dropdown__text-arrow(data-dropdown-chevron)
      i.zmdi.zmdi-chevron-down

mixin filterDateDropdown(text)
  .dropdown&attributes(attributes)
    .dropdown__text #{text}
    .dropdown__text-arrow
      i.zmdi.zmdi-chevron-down