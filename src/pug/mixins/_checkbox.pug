mixin checkbox(text, checked)

	if checked
		label.label-check&attributes(attributes)
			input(type="checkbox" name="checkbox" checked).label-check__input
			span.label-check__new-input 
				.check-item
			|#{text}
	else
		label.label-check&attributes(attributes)
			input(type="checkbox" name="checkbox").label-check__input
			span.label-check__new-input 
				.check-item
			|#{text}

mixin checkboxList(header, list)
	.expandable-checkbox&attributes(attributes)
		.expandable-checkbox__header #{header}
		if list
			.expandable-checkbox__list
				each item in list
					.expandable-checkbox__list-item
						if item[1] === "0"
							+checkbox(item[0])
						else
							+checkbox(item[0], "checked")
		.expandable-checkbox__arrow
			i.zmdi.zmdi-chevron-down

mixin checkboxRich(text, desc)
	label.label-check-rich&attributes(attributes)
		input(type="checkbox" name="checkbox").label-check-rich__input
		span.label-check-rich__new-input 
			.check-item
		|#{text}
		.label-check-rich__description #{desc}