extends ../layout/page.pug

block variables
  - var pageClass = 'body'
  - var title = 'Поиск номера';
  - var register = 'Зарегистрироваться';
  - var login = 'Войти';
  - var Services = ["first", "second", "third"];
  -
    var headerMenu = [
      {title: "О нас", url: "#", submenu: ""},
      {title: "Услуги", url: "#", submenu: Services},
      {title: "Вакансии", url: "#", submenu: ""},
      {title: "Новости", url: "#", submenu: ""},
      {title: "Соглашения", url: "#", submenu: Services}
    ];

block content

  .room-details
    include ../../blocks/header/header.pug
    .room-details__collage
      .room-details__collage-main(style="background-image: url(./assets/img/big-images/landing.jpg);")
      .room-details__collage-secondary(style="background-image: url(./assets/img/big-images/landing.jpg);")
      .room-details__collage-secondary(style="background-image: url(./assets/img/big-images/landing.jpg);")
    .room-details__container
      .room-details__info
        .room-details__desc
          .room-comfort
            .room-comfort__info
              .title-2.mb-25 Сведения о номере
              +comfort("Комфорт", "Шумопоглощающие стены", "zmdi zmdi-mood").mb-20
              +comfort("Удобство", "Окно в каждой из спален", "zmdi zmdi-city").mb-20
              +comfort("Уют", "Номер оснащён камином", "zmdi zmdi-fire").border-none
            .room-comfort__voites
              .title-2 Впечатления от номера
              .room-comfort__voites-diagramm
                include ../../blocks/diagramm/diagramm.pug
                ul.diagramm-types
                  li.diagramm-types__item.diagramm-types__item_color_orange Великолепно
                  li.diagramm-types__item.diagramm-types__item_color_green Хорошо
                  li.diagramm-types__item.diagramm-types__item_color_violet Удовлетворительно
                  li.diagramm-types__item.diagramm-types__item_color_dark Разочарован
          .room-comments
            .room-comments__header
              .title-2 Отзывы посетителей номера
              .comments-count 2 отзыва
            .room-comments__comment
              +comment({
                author: "Мурад Сарафанов", 
                avatarLink: "./assets/img/avatar/avatar.png", 
                time: "5 дней назад", 
                text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.", 
                likeCount: "12", 
                likeCheck: true
                })
            .room-comments__comment
              +comment({
                author: "Патрисия Стёклышкова", 
                avatarLink: "./assets/img/avatar/avatar.png", 
                time: "Неделю назад", 
                text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент", 
                likeCount: "2", 
                likeCheck: false
                })
          .room-rules
            .room-rules__rules
              .title-2.room-rules__rules-header Правила
              +bulletList(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
            .room-rules__cancel
              .title-2.room-rules__rules-header Отмена
              | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

        .room-details__room-price-card
          include ../../blocks/room-price-card/room-price-card.pug


  include ../../blocks/footer/footer.pug
