extends ../layout/page.pug

block variables
	- var title = 'Поиск номера';
	//- - var pageClass = 'content-page';

block content
	.ui-wrapper
		.section-wrapper
			.container
				include ../sections/header-guest.pug
		.main-content.mt-30
			.container.search-room-wrapper
				.search-room-filter
					h3 Даты пребывания в отеле
					+filterDateDropdown("19 авг - 23 авг").mb-20
					h3 Гости
					+dropdown("3 гостя, 1 младенец", "room", ['взрослые', 'дети', 'младенцы'],"apply").mb-30
					+rangeslider("Диапазон цены", "5 000", "10 000")
					.slider-description Стоимость за сутки пребывания в номере
					h3 checkbox buttons
					.checkbox-column
						+checkbox("Можно курить")
						+checkbox("Можно с питомцами", "Check")
						+checkbox("Можно пригласить гостей (до 10 человек)", "Check")
					h3 Доступность
					.checkbox-rich-wrapper
						+checkboxRich('Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')
					
					+checkboxRich('Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера.')
					h3.mt-30 Удобства номера
					+dropdown("2 спальни, 2 кровати...", "", "", "").mb-30
					+checkboxList("Дополнительные удобства", [['Завтрак', '0'],['Письменный стол', '1'],['Стул для кормления', '1'],['Кроватка', '1'],['Телевизор', '0'],['Шампунь', '0'],['Телевизор', '0'],['Шампунь', '0']])
				.search-room-main
					h1.search-room-main__header Номера, которые мы для вас подобрали
					.search-room-main__rooms
						+roomCard("./assets/img/images/image_888.jpg", "888", "9 990", "5", "145", "люкс", "arrows").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_840.jpg", "840", "9 900", "4", "65").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_980.jpg", "980", "8 500", "3", "35", "люкс").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_856.jpg", "856", "7 300", "5", "19").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_740.jpg", "740", "6 000", "4", "44").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_982.jpg", "982", "5 800", "3", "56").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_678.jpg", "678", "5 500", "5", "45").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_450.jpg", "450", "5 300", "4", "39").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_350.jpg", "350", "5 000", "3", "77").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_666.jpg", "666", "5 000", "5", "25").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_444.jpg", "444", "5 000", "3", "15").search-room-main__rooms-item
						+roomCard("./assets/img/images/image_352.jpg", "352", "5 000", "3", "55").search-room-main__rooms-item
					.search-room-main__pagination
						+pagination("1 – 12 из 100+ вариантов аренды")

		.footer_border_top
			include ../sections/footer.pug